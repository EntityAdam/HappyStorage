@page "{customerNumber}"
@model HappyStorage.Web.Pages.Customers.DeleteModel
@{
    ViewData["Title"] = "Delete Customer";
}

<h1>Are you sure you want to delete this customer?</h1>

<form method="post">
    <input type="text" hidden="hidden" asp-for="@Model.ViewModel.CustomerNumber" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-page="/Customer/List" class="btn btn-light">Go Back</a>
</form>