@page "{customerNumber}"
@model HappyStorage.Web.Pages.Customers.DetailsModel
@{
    ViewData["Title"] = "Details";
}

<h1>Customer Details</h1>

<div asp-validation-summary="All"></div>

<form asp-page="Details" method="post" class="form-group">
    <div class="form-group">
        <input asp-for="@Model.ViewModel.NewCustomer.CustomerNumber" type="hidden" class="form-control" />
        
        <h3>Name</h3>
        <label asp-for="@Model.ViewModel.NewCustomer.FirstName"></label>
        <input asp-for="@Model.ViewModel.NewCustomer.FirstName" type="text" class="form-control" placeholder="First Name" />

        <label asp-for="@Model.ViewModel.NewCustomer.LastName"></label>
        <input class="form-control" asp-for="@Model.ViewModel.NewCustomer.LastName" type="text" placeholder="Last Name" />
    </div>
    <div class="form-group">
        <h3>Address</h3>
        <label asp-for="@Model.ViewModel.NewCustomer.Street"></label>
        <input class="form-control" asp-for="@Model.ViewModel.NewCustomer.Street" type="text" placeholder="1 Copley Parkway" />

        <label asp-for="@Model.ViewModel.NewCustomer.City"></label>
        <input class="form-control" asp-for="@Model.ViewModel.NewCustomer.City" type="text" placeholder="Morrisville" />

        <label asp-for="@Model.ViewModel.NewCustomer.State"></label>
        <input class="form-control" asp-for="@Model.ViewModel.NewCustomer.State" type="text" placeholder="NC" />

        <label asp-for="@Model.ViewModel.NewCustomer.PostalCode"></label>
        <input class="form-control" asp-for="@Model.ViewModel.NewCustomer.PostalCode" type="number" placeholder="27560" />
    </div>
    <br />
    <button class="btn btn-primary" type="submit">Submit</button>
    <button class="btn">Cancel</button>
</form>